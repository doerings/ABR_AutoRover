<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ir_label"
        android:gravity="center_horizontal"
        android:padding="10dp"
        android:textAllCaps="true"
        android:textSize="24sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ir_left"
            android:paddingLeft="45dp"
            android:layout_weight="1"
            android:textAllCaps="true"
            android:textSize="18sp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ir_center"
            android:layout_weight="1"
            android:textAllCaps="true"
            android:paddingLeft="15dp"
            android:textSize="18sp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ir_right"
            android:layout_weight="1"
            android:textAllCaps="true"
            android:paddingLeft="10dp"
            android:textSize="18sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/irLeft"
            android:text="0.0"
            android:paddingLeft="64dp"
            android:layout_weight="1"
            android:textAllCaps="true"
            android:textSize="18sp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/irCenter"
            android:text="0.0"
            android:paddingLeft="48dp"
            android:layout_weight="1"
            android:textAllCaps="true"
            android:textSize="18sp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/irRight"
            android:text="0.0"
            android:paddingLeft="32dp"
            android:layout_weight="1"
            android:textAllCaps="true"
            android:textSize="18sp"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ToggleButton
            android:id="@+id/buttonStartStop"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:layout_width="300dp"
            android:layout_height="75dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@color/gray"
            android:textOn="@string/stop"
            android:textOff="Start Navigation"
            android:textColor="@color/white"
            android:textSize="32sp" />
        <ToggleButton
            android:id="@+id/buttonLeftCircle"
            android:layout_below="@+id/buttonStartStop"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:layout_width="300dp"
            android:layout_height="75dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@color/gray"
            android:textOn="@string/stop"
            android:textOff="Start Left Circles"
            android:textColor="@color/white"
            android:textSize="32sp" />
        <ToggleButton
            android:id="@+id/buttonRightCircle"
            android:layout_below="@+id/buttonLeftCircle"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:layout_width="300dp"
            android:layout_height="75dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@color/gray"
            android:textOn="@string/stop"
            android:textOff="Start Right Circles"
            android:textColor="@color/white"
            android:textSize="32sp" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/trail"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:src="@drawable/trail"/>
        <ImageView
            android:layout_marginTop="10dp"
            android:layout_width="150dp"
            android:paddingRight="10dp"
            android:layout_toRightOf="@+id/trail"
            android:layout_height="wrap_content"
            android:src="@drawable/carlnoback"/>
    </RelativeLayout>

</LinearLayout>